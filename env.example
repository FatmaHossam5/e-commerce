# Server Configuration
PORT=3000
BASEURL=/api/v1
MOOD=DEV

# Database
DBURI=mongodb://localhost:27017/ecommerce

# JWT Secrets (Generate strong secrets for production)
emailToken=your-super-secret-jwt-token-here-min-32-chars
BearerKey=Bearer__

# Password Hashing
SALTROUND=10

# Email Configuration (Gmail App Password)
nodeMailerEmail=your-email@gmail.com
nodeMailerPassword=your-16-char-app-password

# Cloudinary Configuration (Get from cloudinary.com)
cloud_name=your-cloudinary-cloud-name
api_key=your-cloudinary-api-key
api_secret=your-cloudinary-api-secret

# Admin Configuration (Change these!)
ADMIN_USERNAME=your-admin-username
ADMIN_EMAIL=your-admin-email@domain.com
ADMIN_PASSWORD=your-secure-admin-password

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
